{
    "extends": "xo-react",
    "envs": [
        "browser",
        "es2020",
        "jest"
    ],
    "space": 4,
    "prettier": true,
    "rules": {
        "node/file-extension-in-import": [
            "error",
            "always",
            {
                ".js": "never",
                ".jsx": "never",
                ".json": "always"
            }
        ],
        "import/extensions": [
            "error",
            {
                "json": "always"
            }
        ]
    }
}